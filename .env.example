# ============================================================================
# .env.example - AssetFlow 3.0
# ============================================================================
# INSTRUCCIONES:
# 1. Copiar este archivo como .env
# 2. Reemplazar [VALORES] con valores reales
# 3. NUNCA commitear .env a Git
# ============================================================================

# MongoDB
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=[CAMBIAR_EN_PRODUCCION]
MONGODB_URI=mongodb://admin:[PASSWORD]@mongodb:27017/assetflow?authSource=admin
DB_NAME=assetflow

# Backend
BACKEND_PORT=5000
NODE_ENV=development

# JWT (Generar: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
JWT_SECRET=[GENERAR_64_CARACTERES_SEGUROS]
JWT_EXPIRE=7d

# Frontend
VITE_API_URL=http://localhost:5000
FRONTEND_PORT=3000

# Email SMTP
SMTP_HOST=smtp.dondominio.com
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER=[EMAIL]
SMTP_PASSWORD=[PASSWORD]
SMTP_FROM=AssetFlow <[EMAIL]>

# Servidor
SERVER_HOST=167.235.58.24
SERVER_USER=Admin
SERVER_PASSWORD=[PASSWORD]
SSH_KEY_PATH=./.credentials/ssh/id_rsa

# Dominio
DOMAIN=assetflow.oversunenergy.com
SSL_ENABLED=false

# Encriptaci√≥n (para API Keys de IA)
ENCRYPTION_KEY=[GENERAR_32_CARACTERES]

# Backup
BACKUP_ENABLED=true
BACKUP_PATH=/backup/assetflow
BACKUP_RETENTION_DAYS=30
BACKUP_TIME=02:00

# Sistema
LANGUAGE=es
TIMEZONE=Europe/Madrid
CURRENCY=EUR

# Logging
LOG_LEVEL=info
LOG_PATH=./.logs
LOG_MAX_FILES=30

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100
